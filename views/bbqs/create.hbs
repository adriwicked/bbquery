<form method="POST" action="/bbqs/create" enctype="multipart/form-data ">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Enter BBQ's name">
  </div>

  <div class="form-group">
    <label for="name">Address</label>
    <input type="text" class="form-control" id="address" name="address" placeholder="Enter BBQ's address" onFocus="geolocate()">
  </div>

  <input type="hidden" id="location" name="location[type]" value="Point"/>
  <input type="hidden" id="longitude" name="location[coordinates]" />
  <input type="hidden" id="latitude" name="location[coordinates]" />

  <div class="form-group">
    <label for="exampleInputPassword1">Date</label>
    <input type="datetime-local" class="form-control" id="date" name="date">
  </div>

  <label for="public">Public or private?</label>
  <select class="form-control mb-3" name="public">
    <option value="true">Public</option>
    <option value="false">Private</option>
  </select>

  <label for="dog-friendly">Dog-friendly?</label>
  <select class="form-control mb-3" name="dogFriendly">
    <option value="true">Yes</option>
    <option value="false">Yes</option>
  </select>

  <label for="maxAttendees">Maximum number of attendees</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-users"></i></span>
    </div>
    <input type="number" min="2" max="50" step="1" class="form-control" name="maxAttendees">
  </div>

  <label for="ppp">Prize per Person</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-euro-sign"></i></span>
    </div>
    <input type="number" min="0.01" step="0.01" class="form-control" name="ppp">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" name="description" rows="5"></textarea>
  </div>

  <div class="custom-file mb-3">
    <input type="file" class="custom-file-input" id="photos" name="photos" multiple>
    <label class="custom-file-label" for="customFile">Upload your best photos!</label>
  </div> 

  <div class="form-group mb-4">
    <label for="tags">Tags</label>
    <input type="text" class="form-control" id="tags" name="tags" value="" data-role="tagsinput">
  </div>

  <section id="dishes">
    <label for="menu">Dishes</label>
    <button type="button" class="btn btn-sm btn-success" id="addDishButton"><i class="fas fa-plus"></i></button>    
  </section>

  <section id="drinks">
    <label for="menu">Drinks</label>
    <button type="button" class="btn btn-sm btn-success" id="drinkButton"><i class="fas fa-plus"></i></button> 
    <div class="card mb-3 mt-3">
      <div class="card-body"></div>
    </div>
  </section>  

  <label for="bread">Bread is included?</label>
  <select class="form-control mb-3" name="bread">
    <option value="true">Yes</option>
    <option value="false">No</option>
  </select>

  <button type="submit" class="btn btn-primary mb-5 ">Submit</button>
</form>

<script src="../js/gPlacesAutocomplete.js"></script>
<script src="../js/bbq-create.js"></script>

<script src="https://maps.googleapis.com/maps/api/js?key={{apiKey}}&libraries=places&callback=initAutocomplete" async defer></script>